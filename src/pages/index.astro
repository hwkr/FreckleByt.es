---
import Layout from "../layouts/Layout.astro";
import Logo from "../assets/logo.svg.astro";

import { siTwitch } from "simple-icons/icons";
import SocialButton from "../components/SocialButton.astro";
---

<Layout title="FreckleBytes">
  <main
    class="h-screen w-screen px-16 py-16 flex flex-col items-start justify-center gap-4"
  >
    <Logo class="w-48 sm:w-96" />
    <SocialButton
      icon={siTwitch}
      href="https://twitch.tv/frecklebytes"
      label="Follow me on Twitch"
    />
  </main>
</Layout>
